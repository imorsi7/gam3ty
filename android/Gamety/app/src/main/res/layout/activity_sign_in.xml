<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="11dp"
    tools:context="com.mahmoudreda.gamety.sign_package.sign_in">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_id_sign_in"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/gametyl" android:contentDescription="TODO"/>
    <EditText
        android:id="@+id/editText_id_sign_in"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_password_sign_in"
        android:layout_alignStart="@+id/editText_password_sign_in"
        android:layout_marginBottom="11dp"
        android:background="@drawable/edit_text_login"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint="@string/id"
        android:inputType="number"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/editText_password_sign_in"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_log_in"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_text_login"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_vpn_key_black_24dp"
        android:ems="10"
        android:hint="@string/passwor"
        android:inputType="textPassword"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_log_in"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_password_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttonanimationcolor"
        android:text="@string/login"
        android:textColor="#FFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="345dp" />
</RelativeLayout>
