<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical"
    tools:context="com.mahmoudreda.gamety.sign_package.Sign_up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sign_up_to"
                android:textColor="#EEE"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_first_name_sign_up"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_face_black_24dp"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#FFF"
                tools:ignore="LabelFor"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />


            <EditText
                android:id="@+id/editText_middle_name_sign_up"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_face_black_24dp"
                android:hint="@string/middle_name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#FFF"
                tools:ignore="LabelFor"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/editText_last_name_sign_up"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_face_black_24dp"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#FFF"
                tools:ignore="LabelFor"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/editText_id_sign_up"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_login"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:ems="10"
                android:hint="@string/id"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/editText_email_sign_up"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_login"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/editText_password_sign_up"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_login"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:ems="10"
                android:hint="@string/password2"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/button_sign_up_data"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonanimationcolor"
                android:text="@string/sign_up"
                android:textColor="#FFF"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="345dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
